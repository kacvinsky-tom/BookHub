@model WebMVC.ViewModels.SettingsChangePasswordViewModel

@{
    ViewBag.Title = "Reset password";
    Layout = "_Layout";
}

<div class="h-full w-full flex justify-center align-center">
    <div class="card bg-base-200 shadow-lg rounded-2xl lg:max-w-5xl w-full">
        <div class="card-body">
            <h2 class="font-bold text-xl">Change password</h2>
            <form asp-action="ChangePassword" method="post" class="grid gap-y-2 gap-x-4 grid-cols-1">
                @Html.ValidationSummary(false, "", new { @class = "text-red-500" })
                <div class="form-control">
                    <label class="label">
                        @Html.LabelFor(u => u.OldPassword, new { @class = "label-text" })
                    </label>
                    @Html.PasswordFor(u => u.OldPassword, new { @class = "input input-bordered" })
                    <label class="label">
                        @Html.ValidationMessageFor(u => u.OldPassword, "", new { @class = "label-text text-red-500" })
                    </label>
                </div>
                <div class="form-control">
                    <label class="label">
                        @Html.LabelFor(u => u.Password, new { @class = "label-text" })
                    </label>
                    @Html.PasswordFor(u => u.Password, new { @class = "input input-bordered" })
                    <label class="label">
                        @Html.ValidationMessageFor(u => u.Password, "", new { @class = "label-text text-red-500" })
                    </label>
                </div>
                <div class="form-control">
                    <label class="label">
                        @Html.LabelFor(u => u.ConfirmPassword, new { @class = "label-text" })
                    </label>
                    @Html.PasswordFor(u => u.ConfirmPassword, new { @class = "input input-bordered" })
                    <label class="label">
                        @Html.ValidationMessageFor(u => u.ConfirmPassword, "", new { @class = "label-text text-red-500" })
                    </label>
                </div>
                <button class="btn btn-success">
                    <i class="bi bi-check-circle"></i>
                    Save
                </button>
            </form>
        </div>
    </div>
</div>
